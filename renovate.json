{
  "extends": [
    "config:base",
    "security:openssf"
  ],
  "labels": ["dependencies"],
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "automerge": false,
      "description": "Open weekly PRs for normal dependencies (no automerge)",
      "groupName": "weekly dependency updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "schedule": ["before 6am on Monday"]
    }
  ],
  "prConcurrentLimit": 5,
  "timezone": "America/New_York",
  "vulnerabilityAlerts": {
    "automerge": true,
    "enabled": true,
    "labels": ["security"]
  }
}